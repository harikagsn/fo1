<!DOCTYPE html>
<html>
  <head>
    <title>Forum</title>

    <%= csrf_meta_tags %>
      <%= javascript_include_tag "application" %>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    
   </head>
  <body>


    <div class="navbar-fixed">
     <nav class="blue-grey">
      <div class="nav-wrapper">
        <div class="container">

        <ul class="right hide-on-med-and-down">
        <li>  <% if user_signed_in? %>
            <div class="navbar-item">
              <ul class="field is-grouped">
              <li><strong><%= link_to 'New Discussion', new_discussion_path, class:"button is-info" %></strong></li>
                <li><%= link_to 'EDIT PROFILE', edit_user_registration_path, :class => 'navbar-link' %></li>
              <li><%= link_to "LOGOUT", destroy_user_session_path, method: :delete %></li>
              Logged in as <strong> <%= current_user.email %> </strong>

            <% else %>

              <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
            <% end %>


            </li>

          <li><a href="http://www.flickr.com/help/forum">Help</a></li>
          <li><a href="news.html">Updates</a></li>


        </ul>
        <p class="navbar-text pull-right">


</p>

      </div>
    </div>
  </nav>
</div>


    <div class="container">
      <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
    <%= yield %>
    </div>

  </body>
</html>
