<h1 class="title is-2 has-text-grey">Editing Reply</h1>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<%= simple_form_for([@discussion, @discussion.replies.build], remote: true) do |f| %>
<div class="field"><i class="material-icons">create</i>
<%= f.text_field :reply %>
</div>

<%= f.button :submit, 'Edit', class:'button is-info' %>

<% end %>
